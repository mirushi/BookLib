<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="luubieunghi.lbn.booklib">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.ReadBookSettingActivity"></activity>
        <activity android:name=".Activity.PageManagementActivity"></activity>
        <activity android:name=".Activity.ReadBookActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.OpenAlbum" />
        <activity android:name=".Activity.PlayMusic" />
        <activity android:name=".Activity.MainActivity" />
        <activity
            android:name=".Activity.AboutActivity"
            android:label="About" />
        <activity android:name=".Activity.openListSong" />

        <service android:name=".service.MyService" />

        <receiver android:name=".service.NotificationReciever" />
    </application>

</manifest>