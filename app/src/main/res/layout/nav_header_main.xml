<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header_main_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/ic_header_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nav_header_main_booklib_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="@id/nav_header_main_layout"
        app:layout_constraintLeft_toLeftOf="@id/nav_header_main_layout"
        app:layout_constraintRight_toRightOf="@id/nav_header_main_layout"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_book_header_icon_no_background"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nav_header_main_txtView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nav_header_main_booklib_icon"
        app:layout_constraintLeft_toLeftOf="@id/nav_header_main_layout"
        app:layout_constraintRight_toRightOf="@id/nav_header_main_layout"
        android:layout_marginTop="16dp"
        android:text="BookLib"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>