<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:weightSum="15"
    >
    <TextView
        android:gravity="center|left"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playback speed"
        android:textColor="#000000">
    </TextView>
    <RadioGroup
        android:id="@+id/radio_group"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/btn_1.6"
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1.6x"
                android:textColor="#000000">
            </RadioButton>
            <RadioButton
                android:id="@+id/btn_1.7"
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1.7x"
                android:textColor="#000000">
            </RadioButton>
            <RadioButton
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1.8x"
                android:textColor="#000000">
            </RadioButton>
            <RadioButton
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1.9x"
                android:textColor="#000000">
            </RadioButton>
            <RadioButton
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2.0x"
                android:textColor="#000000">
            </RadioButton>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2.2x"
                android:textColor="#000000">
            </RadioButton>
            <RadioButton
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2.4x"
                android:textColor="#000000">
            </RadioButton>
            <RadioButton
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2.6x"
                android:textColor="#000000">
            </RadioButton>
            <RadioButton
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2.8x"
                android:textColor="#000000">
            </RadioButton>
            <RadioButton
                android:button="@null"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3.0x"
                android:textColor="#000000">
            </RadioButton>

        </LinearLayout>
    </RadioGroup>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:weightSum="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="19">
        </LinearLayout>
        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/btn_OK_playback_speed_dialog"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="OK"
            android:textColor="#489494">
        </Button>
    </LinearLayout>

</LinearLayout>