<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    tools:context=".UI.ReadBook.old_UI.ReadBookActivity"
    android:id="@+id/define_layout"
    android:layout_gravity="bottom">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/shadow_replace"
    android:scaleType="fitXY"
    />
    <ImageView
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/define_image" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word_to_define"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:text="Key Word"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/word_spell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="15sp"
            android:text="spell"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/define_word_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Type"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mean_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="1. Mean 1"
            android:textSize="12dp" />
    </LinearLayout>

</FrameLayout>